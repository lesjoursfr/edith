{
	"name": "@lesjoursfr/edith",
	"version": "2.2.5",
	"description": "Simple WYSIWYG editor.",
	"license": "MIT",
	"repository": "lesjoursfr/edith",
	"homepage": "https://github.com/lesjoursfr/edith#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/edith/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x"
	},
	"browserslist": [
		"> 1%",
		"last 3 versions",
		"not dead"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"eslint-check": "eslint",
		"eslint-fix": "eslint --fix",
		"stylelint-check": "stylelint **/*.scss",
		"stylelint-fix": "stylelint **/*.scss --fix",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write .",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' mocha",
		"build-esm": "tsc && node assets.js",
		"build-browser": "webpack --mode production --config ./server/webpack.config.js --progress",
		"build": "npm run build-esm && npm run build-browser",
		"builddeps": "webpack --mode production --config server/deps/codemirror.webpack.js --progress",
		"server": "webpack serve --mode development --config ./server/webpack.config.js --hot --open"
	},
	"files": [
		"src/**/*",
		"dist/**/*",
		"build/**/*"
	],
	"keywords": [
		"WYSIWYG",
		"editor"
	],
	"dependencies": {
		"@lesjoursfr/browser-tools": "^1.1.5",
		"dompurify": "^3.1.7"
	},
	"devDependencies": {
		"@babel/core": "^7.26.0",
		"@babel/preset-env": "^7.26.0",
		"@codemirror/lang-html": "^6.4.9",
		"@eslint/js": "^9.13.0",
		"@fortawesome/fontawesome-free": "^6.6.0",
		"@popperjs/core": "^2.11.8",
		"@tsconfig/next": "^2.0.3",
		"@types/babel__core": "^7.20.5",
		"@types/babel__preset-env": "^7.9.7",
		"@types/color": "^4.2.0",
		"@types/dompurify": "^3.0.5",
		"@types/jsdom": "^21.1.7",
		"@types/mocha": "^10.0.9",
		"@types/node": "^22.8.6",
		"babel-loader": "^9.2.1",
		"codemirror": "^6.0.1",
		"css-loader": "^7.1.2",
		"css-minimizer-webpack-plugin": "^7.0.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"fs-extra": "^11.2.0",
		"globals": "^15.11.0",
		"jsdom": "^25.0.1",
		"mini-css-extract-plugin": "^2.9.2",
		"mocha": "^10.8.2",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"sass": "^1.80.5",
		"sass-loader": "^16.0.3",
		"stylelint": "^16.10.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"terser-webpack-plugin": "^5.3.10",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.12.2",
		"webpack": "^5.96.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.1.0"
	},
	"peerDependencies": {
		"@codemirror/lang-html": "^6.4.9",
		"@fortawesome/fontawesome-free": "^6.6.0",
		"@popperjs/core": "^2.11.8",
		"codemirror": "^6.0.1"
	},
	"packageManager": "yarn@4.5.1"
}
