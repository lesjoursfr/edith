{
	"name": "@lesjoursfr/edith",
	"version": "4.0.2",
	"description": "Simple WYSIWYG editor.",
	"license": "MIT",
	"repository": "lesjoursfr/edith",
	"homepage": "https://github.com/lesjoursfr/edith#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/edith/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "22.x || 24.x"
	},
	"browserslist": [
		"> 1%",
		"last 3 versions",
		"not dead"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"eslint-check": "eslint",
		"eslint-fix": "eslint --fix",
		"stylelint-check": "stylelint **/*.scss",
		"stylelint-fix": "stylelint **/*.scss --fix",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write .",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' mocha",
		"build-esm": "tsc && node assets.js",
		"build-browser": "webpack --mode production --config ./server/webpack.config.js --progress",
		"build": "npm run build-esm && npm run build-browser",
		"builddeps": "webpack --mode production --config server/deps/codemirror.webpack.js --progress",
		"server": "webpack serve --mode development --config ./server/webpack.config.js --hot --open"
	},
	"files": [
		"src/**/*",
		"dist/**/*",
		"build/**/*"
	],
	"keywords": [
		"WYSIWYG",
		"editor"
	],
	"dependencies": {
		"@lesjoursfr/browser-tools": "^2.0.2",
		"dompurify": "^3.3.1"
	},
	"devDependencies": {
		"@babel/core": "7.29.0",
		"@babel/preset-env": "7.29.0",
		"@codemirror/lang-html": "6.4.11",
		"@eslint/js": "10.0.1",
		"@fortawesome/fontawesome-free": "7.1.0",
		"@popperjs/core": "2.11.8",
		"@tsconfig/next": "2.0.5",
		"@types/babel__core": "7.20.5",
		"@types/babel__preset-env": "7.10.0",
		"@types/color": "4.2.0",
		"@types/jsdom": "27.0.0",
		"@types/mocha": "10.0.10",
		"@types/node": "24.10.11",
		"babel-loader": "10.0.0",
		"codemirror": "6.0.2",
		"css-loader": "7.1.3",
		"css-minimizer-webpack-plugin": "7.0.4",
		"eslint": "10.0.0",
		"eslint-config-prettier": "10.1.8",
		"fs-extra": "11.3.3",
		"globals": "17.3.0",
		"jsdom": "28.0.0",
		"mini-css-extract-plugin": "2.10.0",
		"mocha": "11.7.5",
		"postcss": "8.5.6",
		"prettier": "3.8.1",
		"sass": "1.97.3",
		"sass-loader": "16.0.7",
		"stylelint": "17.1.1",
		"stylelint-config-standard-scss": "17.0.0",
		"terser-webpack-plugin": "5.3.16",
		"ts-loader": "9.5.4",
		"ts-node": "10.9.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.54.0",
		"webpack": "5.105.0",
		"webpack-cli": "6.0.1",
		"webpack-dev-server": "5.2.3"
	},
	"peerDependencies": {
		"@codemirror/lang-html": "^6.4.11",
		"@fortawesome/fontawesome-free": "^7.1.0",
		"@popperjs/core": "^2.11.8",
		"codemirror": "^6.0.2"
	},
	"dependenciesMeta": {
		"@parcel/watcher": {
			"built": true
		}
	},
	"packageManager": "yarn@4.12.0"
}
