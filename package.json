{
	"name": "@lesjoursfr/edith",
	"version": "2.2.0",
	"description": "Simple WYSIWYG editor.",
	"license": "MIT",
	"repository": "lesjoursfr/edith",
	"homepage": "https://github.com/lesjoursfr/edith#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/edith/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"browserslist": [
		"> 1%",
		"last 3 versions",
		"not dead"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"eslint-check": "eslint . --ext .js,.jsx,.ts,.tsx",
		"eslint-fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"stylelint-check": "stylelint **/*.scss",
		"stylelint-fix": "stylelint **/*.scss --fix",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write .",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' mocha",
		"build-esm": "tsc && node assets.js",
		"build-browser": "webpack --mode production --config ./server/webpack.config.js --progress",
		"build": "npm run build-esm && npm run build-browser",
		"builddeps": "webpack --mode production --config server/deps/codemirror.webpack.js --progress",
		"server": "webpack serve --mode development --config ./server/webpack.config.js --hot --open"
	},
	"files": [
		"src/**/*",
		"dist/**/*",
		"build/**/*"
	],
	"keywords": [
		"WYSIWYG",
		"editor"
	],
	"dependencies": {
		"@lesjoursfr/browser-tools": "^1.0.6"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/preset-env": "^7.23.7",
		"@codemirror/lang-html": "^6.4.7",
		"@fortawesome/fontawesome-free": "^6.5.1",
		"@popperjs/core": "^2.11.8",
		"@tsconfig/next": "^2.0.1",
		"@types/babel__core": "^7.20.5",
		"@types/babel__preset-env": "^7.9.6",
		"@types/color": "^3.0.6",
		"@types/jsdom": "^21.1.6",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.10.6",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"babel-loader": "^9.1.3",
		"codemirror": "^6.0.1",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"fs-extra": "^11.2.0",
		"jsdom": "^23.0.1",
		"mini-css-extract-plugin": "^2.7.6",
		"mocha": "^10.2.0",
		"postcss": "^8.4.32",
		"prettier": "^3.1.1",
		"sass": "^1.69.6",
		"sass-loader": "^13.3.3",
		"stylelint": "^16.1.0",
		"stylelint-config-sass-guidelines": "^11.0.0",
		"terser-webpack-plugin": "^5.3.10",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1"
	},
	"peerDependencies": {
		"@codemirror/lang-html": "^6.4.7",
		"@fortawesome/fontawesome-free": "^6.5.1",
		"@popperjs/core": "^2.11.8",
		"codemirror": "^6.0.1"
	},
	"packageManager": "yarn@4.0.2"
}
