{
	"name": "wysiwyg-editor",
	"version": "1.0.0",
	"description": "Simple WYSIWYG editor.",
	"license": "MIT",
	"repository": "lesjoursfr/wysiwyg-editor",
	"homepage": "https://github.com/lesjoursfr/wysiwyg-editor#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/wysiwyg-editor/issues"
	},
	"engines": {
		"node": ">=v16.14.2"
	},
	"browserslist": [
		"Chrome >= 60",
		"Safari >= 12",
		"iOS >= 12",
		"Firefox >= 60",
		"Edge >= 79"
	],
	"main": "src/index.js",
	"type": "module",
	"scripts": {
		"lint": "npx eslint --fix src/",
		"test": "npx ava",
		"server": "webpack serve --mode development --config webpack.config.js --hot --open",
		"build": "webpack --mode production --config webpack.config.js --progress"
	},
	"files": [
		"src/**/*",
		"build/**/*"
	],
	"keywords": [
		"WYSIWYG",
		"editor"
	],
	"devDependencies": {
		"@babel/core": "^7.17.8",
