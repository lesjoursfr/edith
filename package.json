{
	"name": "wysiwyg-editor",
	"version": "1.0.0",
	"description": "Simple WYSIWYG editor.",
	"license": "MIT",
	"repository": "lesjoursfr/wysiwyg-editor",
	"homepage": "https://github.com/lesjoursfr/wysiwyg-editor#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/wysiwyg-editor/issues"
	},
	"engines": {
		"node": ">=v18.3.0"
	},
	"browserslist": [
		"Chrome >= 60",
		"Safari >= 12",
		"iOS >= 12",
		"Firefox >= 60",
		"Edge >= 79"
	],
	"main": "src/index.js",
	"type": "module",
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"stylelint-check": "stylelint-config-prettier-check",
		"eslint-check": "eslint-config-prettier src/index.js",
		"check-js": "eslint . --ext .js",
		"check-sass": "stylelint **/*.scss",
		"check-style": "prettier --check .",
		"lint-js": "eslint . --fix --ext .js",
		"lint-sass": "stylelint **/*.scss --fix",
		"format": "prettier --write .",
		"test": "npx ava",
		"server": "webpack serve --mode development --config webpack.config.js --hot --open",
		"build": "webpack --mode production --config webpack.config.js --progress"
	},
	"files": [
		"src/**/*",
		"build/**/*"
	],
	"keywords": [
		"WYSIWYG",
		"editor"
	],
	"devDependencies": {
		"@babel/core": "^7.18.5",
		"@babel/preset-env": "^7.18.2",
		"@fortawesome/fontawesome-free": "^6.1.1",
		"@popperjs/core": "^2.11.5",
		"ava": "^4.3.0",
		"babel-loader": "^8.2.5",
		"codemirror": "^6.0.0",
		"css-loader": "^6.7.1",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.2.2",
		"eslint-plugin-promise": "^6.0.0",
		"jsdom": "^19.0.0",
		"mini-css-extract-plugin": "^2.6.0",
		"postcss": "^8.4.14",
		"prettier": "^2.7.0",
		"sass": "^1.52.3",
		"sass-loader": "^13.0.0",
		"style-loader": "^3.3.1",
		"stylelint": "^14.9.1",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.9.2"
	},
	"packageManager": "yarn@3.2.1"
}
