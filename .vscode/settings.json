{
	"search.exclude": {
		"**/.git/**": true,
		"**/node_modules/**": true,
		"**/.yarn/**": true,
		"**/server/builds/**": true
	},
	"files.exclude": {
		"**/.git/**": true,
		"**/node_modules/**": true,
		"**/.yarn/**": true,
		"**/server/builds/**": true
	},
	"files.watcherExclude": {
		"**/.git/**": true,
		"**/node_modules/**": true,
		"**/.yarn/**": true,
		"**/server/builds/**": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"eslint.format.enable": true,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"stylelint.validate": ["css", "scss"],
	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
